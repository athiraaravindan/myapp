<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
<script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
<![endif]-->

</head>
<body>
    <div id="wrapper">
        <!--navigation-->
        <%- include('navigationbar') %>
        <!-- /.navbar-top-links -->
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Update your details</h1>
                </div>
            </div>
         <div class="row">
                      <div class="col-lg-6">
                          <div class="panel panel-default">
                              <div class="panel-heading">
                                  Update the details
                              </div>
                             <div class="panel-body">
                                 <div class="row">
                                     <div class="col-lg-12">
                                   <form role="form" method="POST">
                                       <fieldset>
                                           <div class="form-group">
                                             <label>Name</label>
                                               <input class="form-control" placeholder="Name" name="fname" type="text" autofocus value="<%= locals.user ? user.fname : '' %>">
                                           </div>
                                           <div class="form-group">
                                             <label>Email</label>
                                               <input class="form-control" placeholder="E-mail" name="email" type="email" value="<%= locals.user ? user.email : '' %>">
                                           </div>
                                          
                                           <div class="form-group">
                                             <label>Date-of-Birth</label>
                                               <input class="form-control" placeholder="Date of Birth" name="date" type="text" id="date" value="<%= locals.user ? user.date : '' %>">
                                           </div>
                                            <div class="form-group">
                                               <label>Status</label>
                                               <select class="form-control" name="status">
                                                   <option value="0" <%= user.status === 0 ? "selected" : '' %> >inactive</option>
                                                   <option value="1" <%= user.status === 1 ? "selected" : '' %> >active</option>
                                                  
                                               </select>
                                           </div>
                                            <div class="form-group" >
                                               <label>Role</label>
                                               <select class="form-control" name="role">
                                                   <option value="1" <%= user.role === 1 ? "selected" : '' %> >user</option>
                                                   <option value="2" <%= user.role === 2 ? "selected" : '' %> >admin</option>
                                                
                                               </select>
                                           </div>
                                          
                                           <!-- Change this to a button or input when using this as a form -->
                                           <button type="submit" class="btn btn-lg btn-defauls btn-block">Update</button>
                                           
                                       </fieldset>
                                   </form>
                                 </div>
                                 </div>
                             </div>
                         </div>
                     </div>
                      <div class="col-lg-6">
                          <div class="panel panel-default">
                              <div class="panel-heading">
                                  image Upload
                              </div>
                             <div class="panel-body">
                                 <div class="row">
                                     <div class="col-lg-12">
                                          <form role="form" method="POST" id="uploadForm" enctype="multipart/form-data" action="<%= baseUrl %>users/profile-image-upload/<%= user._id %>">
                                              <fieldset>
                                                  <div class="form-control">
                                                      <input type="file" name="image">
                                                  </div>
                                                  <br>
                                                 
                                                    <input  id="hidden" type="hidden" name="imgdelete" value="<%= locals.user ? user.imagefile : '' %>">
                                            
                                                  
                                                 <!--  <input type="submit" value="Upload Image" name="submit" class="btn btn-lg btn-default btn-block"> -->

                                                  <button type="submit" class="btn btn-lg btn-defauls btn-block" name="submit" class="img">Upload image</button>
                                                    
                                                  <span id="status1"></span>
                                                  <span class="error"id="error"></span> 
                                                  <span id="status"></span>
                                           
                                                  
                                              </fieldset>
                                          </form>
                                          <img src="<%= baseUrl %>uploads/<%= locals.user ? user.imagefile : '' %>" height= "100px" width="100px" id="greatphoto"/> 
                                 </div>
                                 </div>
                             </div>
                         </div>
                     </div>
                 </div>
            </div>

        <!-- jQuery -->
<script src="<%= baseUrl %>vendor/bootstrap/js/bootstrap.min.js"></script>

<!-- Metis Menu Plugin JavaScript -->
<script src="<%= baseUrl %>vendor/metisMenu/metisMenu.min.js"></script>

<!-- Custom Theme JavaScript -->
<script src="<%= baseUrl %>dist/js/sb-admin-2.js"></script>
<script src="<%= baseUrl %>vendor/jquery/jquery.min.js"></script>

<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script src="http://cdnjs.cloudflare.com/ajax/libs/jquery.form/3.51/jquery.form.min.js"></script> 


<!-- Bootstrap Core JavaScript -->



<script src="<%= baseUrl %>javascripts/fileupload.js"></script>
<script type="text/javascript">
  var baseUrl = "<%= baseUrl %>";
</script>

    </body>

    </html>
